{
	"$schema": "../node_modules/@tauri-apps/cli/schema.json",
	"build": {
		"beforeBuildCommand": "pnpm run build",
		"beforeDevCommand": "pnpm run dev",
		"devPath": "http://localhost:5173",
		"distDir": "../build"
	},
	"package": {
		"productName": "Skootils",
		"version": "0.1.0"
	},
	"tauri": {
		"allowlist": {
			"shell": {
				"sidecar": true,
				"scope": [
					{
						"name": "../../learnatvcs/dist/learnatvcs",
						"args": [{ "validator": "(null|\\[.*?\\])" }],
						"sidecar": true
					},
					{
						"name": "../../powerschool/dist/powerschool",
						"sidecar": true
					},
					{
						"name": "../../powerschool/dist/alltime",
						"args": [{ "validator": "\\w+" }],
						"sidecar": true
					},
					{
						"name": "../../powerschool/dist/for_class",
						"args": [{ "validator": "\\w+" }, { "validator": "\\w+" }],
						"sidecar": true
					}
				]
			}
		},
		"bundle": {
			"active": true,
			"category": "DeveloperTool",
			"copyright": "",
			"deb": {
				"depends": []
			},
			"externalBin": [
				"../../powerschool/dist/powerschool",
				"../../powerschool/dist/alltime",
				"../../powerschool/dist/for_class",
				"../../learnatvcs/dist/learnatvcs"
			],
			"icon": [
				"icons/32x32.png",
				"icons/128x128.png",
				"icons/128x128@2x.png",
				"icons/icon.icns",
				"icons/icon.ico"
			],
			"identifier": "com.bryanhu.skootils",
			"longDescription": "",
			"macOS": {
				"entitlements": null,
				"exceptionDomain": "",
				"frameworks": [],
				"providerShortName": null,
				"signingIdentity": null
			},
			"resources": [],
			"shortDescription": "",
			"targets": "all",
			"windows": {
				"certificateThumbprint": null,
				"digestAlgorithm": "sha256",
				"timestampUrl": ""
			}
		},
		"security": {
			"csp": null
		},
		"updater": {
			"active": false
		},
		"windows": [
			{
				"fullscreen": false,
				"height": 600,
				"resizable": true,
				"title": "Skootils",
				"width": 800,
				"minWidth": 800,
				"minHeight": 600
			}
		]
	}
}
