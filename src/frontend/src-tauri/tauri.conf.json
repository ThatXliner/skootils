{
	"$schema": "../node_modules/@tauri-apps/cli/schema.json",
	"build": {
		"beforeBuildCommand": "pnpm run build",
		"beforeDevCommand": "pnpm run dev",
		"devPath": "http://localhost:3000",
		"distDir": "../build"
	},
	"package": {
		"productName": "Skootils",
		"version": "0.1.0"
	},
	"tauri": {
		"allowlist": {
			"all": true,
			"shell": {
				"scope": [
					{
						"name": "learnatvcs",
						"cmd": "../../learnatvcs/.venv/bin/python",
						"args": ["-um", "learnatvcs", { "validator": "(null|\\[.*?\\])" }]
					},
					{
						"name": "powerschool",
						"cmd": "../../powerschool/.venv/bin/python",
						"args": ["-um", "powerschool"]
					},
					{
						"name": "powerschool-history",
						"cmd": "../../powerschool/.venv/bin/python",
						"args": [
							"-um",
							"powerschool.storage",
							{ "validator": "all|class" },
							{ "validator": "w+" }
						]
					}
				]
			}
		},
		"bundle": {
			"active": true,
			"category": "DeveloperTool",
			"copyright": "",
			"deb": {
				"depends": []
			},
			"externalBin": [],
			"icon": [
				"icons/32x32.png",
				"icons/128x128.png",
				"icons/128x128@2x.png",
				"icons/icon.icns",
				"icons/icon.ico"
			],
			"identifier": "com.tauri.dev",
			"longDescription": "",
			"macOS": {
				"entitlements": null,
				"exceptionDomain": "",
				"frameworks": [],
				"providerShortName": null,
				"signingIdentity": null
			},
			"resources": [],
			"shortDescription": "",
			"targets": "all",
			"windows": {
				"certificateThumbprint": null,
				"digestAlgorithm": "sha256",
				"timestampUrl": ""
			}
		},
		"security": {
			"csp": null
		},
		"updater": {
			"active": false
		},
		"windows": [
			{
				"fullscreen": false,
				"height": 600,
				"resizable": true,
				"title": "Skootils",
				"width": 800,
				"minWidth": 800,
				"minHeight": 600
			}
		]
	}
}
